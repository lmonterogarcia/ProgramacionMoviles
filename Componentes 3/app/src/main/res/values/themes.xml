<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Componentes2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clr_primario</item>
        <item name="colorPrimaryVariant">@color/clr_primario_variant</item>
        <item name="colorOnPrimary">@color/clr_primario_encima</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clr_secundario</item>
        <item name="colorSecondaryVariant">@color/clr_secundario_variant</item>
        <item name="colorOnSecondary">@color/clr_secundario_encima_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="lblNormal" parent="Theme.Componentes2">
        <item name="android:textColor">@color/clr_text_normal</item>
        <item name="android:textSize">@dimen/tamanioTextNormal</item>
    </style>
    <style name="lblResaltado" parent="Theme.Componentes2">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textColor">@color/clr_secundario</item>
        <item name="android:textSize">@dimen/tamanioTextResaltado</item>
    </style>
    <style name="lblTitulo" parent="Theme.Componentes2">
        <item name="android:textColor">@color/clr_text_normal</item>
        <item name="android:textSize">@dimen/tamanioTextTitulo</item>
    </style>
    <style name="distanciaFrame" parent="lblNormal">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginBottom">@dimen/marginBotton</item>
    </style>
    <style name="distanciaBetween" parent="Theme.Componentes2">
        <item name="android:layout_marginTop">@dimen/marginTopBetween</item>
    </style>
</resources>